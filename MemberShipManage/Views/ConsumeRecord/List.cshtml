@{
    Layout = null;
}

@model MemberShipManage.Models.ConsumeRecordListModel
@using Webdiyer.WebControls.Mvc;
<table id="cutomerlist" class="table table-striped table-bordered table-condensed">
    <tr style="background-color:#eee;height:35px;">
        <th>用户名</th>
        <th>姓名</th>
        <th>消费金额</th>
        <th>消费明细</th>
        <th>消费日期</th>
        <th>操作</th>
    </tr>
    @if (Model != null && Model.ConsumeRecordList != null && Model.ConsumeRecordList.Count() > 0)
    {
        foreach (var consumeRecord in Model.ConsumeRecordList)
        {
            <tr>
                <td style="width:150px">@(consumeRecord.Customer != null ? consumeRecord.Customer.UserNo : string.Empty)</td>
                <td style="width:100px">@(consumeRecord.Customer != null ? consumeRecord.Customer.Name : string.Empty)</td>
                <td style="width:120px;color:red">@consumeRecord.Amount</td>
                <td>@(consumeRecord.Detail ?? string.Empty)</td>
                <td style="width:150px">
                    @consumeRecord.InDate.GetValueOrDefault(DateTime.Now).ToString("yyyy-MM-dd HH:mm")
                </td>
                <td style="width:80px"><button type="button" class="btn btn-warning" onclick="recallConsume(@consumeRecord.ID)">撤销</button></td>
            </tr>
        }
    }
</table>
@if (Model.ConsumeRecordList != null && Model.ConsumeRecordList.Count > 0)
{
    <div class="card bg-info text-white" style="height:30px;line-height:30px">
        <div class="card-body">
            共有 <span style="color: blue" id="ft">@Model.ConsumeRecordList.TotalItemCount</span> 条记录 当前是第 <span style="color: blue">@(Model.ConsumeRecordList.CurrentPageIndex)</span>
            页 共 <span style="color: blue">@Model.ConsumeRecordList.TotalPageCount</span> 页&nbsp;&nbsp;&nbsp;&nbsp;
            @if (Model.ConsumeRecordList.CurrentPageIndex > 1)
            {
                @Ajax.ActionLink("首页", "List",
                          new {
                                PageIndex=0,
                                PageSize= Model.ConsumeRecordList.PageSize,
                                Model.Name,
                                Model.UserNo,
                                Model.StartDate,
                                Model.EndDate
                          },
                          new AjaxOptions() { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "consumelist" }, new { style = "color:blue" })
                @Ajax.ActionLink("上一页", "List",
                          new
                          {
                              PageIndex = Model.ConsumeRecordList.CurrentPageIndex-1,
                              PageSize = Model.ConsumeRecordList.PageSize,
                              Model.Name,
                              Model.UserNo,
                              Model.StartDate,
                              Model.EndDate
                          },
                          new AjaxOptions() { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "consumelist" }, new { style = "margin-left:5px;color:blue" })
            }
            else
            {
                <text>首页&nbsp;</text>
                <text>上一页&nbsp;</text>
            }
            @if (Model.ConsumeRecordList.CurrentPageIndex < Model.ConsumeRecordList.TotalPageCount)
            {
                @Ajax.ActionLink("下一页", "List",
                          new
                          {
                              PageIndex = Model.ConsumeRecordList.CurrentPageIndex + 1,
                              PageSize = Model.ConsumeRecordList.PageSize,
                              Model.Name,
                              Model.UserNo,
                              Model.StartDate,
                              Model.EndDate
                          },
                          new AjaxOptions() { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "consumelist" }, new { style = "margin-left:5px;color:blue" })
                @Ajax.ActionLink("末页", "List",
                           new
                           {
                               PageIndex = Model.ConsumeRecordList.TotalPageCount,
                               PageSize = Model.ConsumeRecordList.PageSize,
                               Model.Name,
                               Model.UserNo,
                               Model.StartDate,
                               Model.EndDate
                           },
                          new AjaxOptions() { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "consumelist" }, new { style = "margin-left:5px;color:blue" })
            }
            else
            {
                <text>下一页&nbsp;</text>
                <text>末页&nbsp;</text>
            }
        </div>
    </div>
}
else
{
    <p class="text-center text-danger">没有符合条件的记录</p>
}
