
@{
    ViewBag.Title = "Consume";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="customer" class="margin-t10">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">
                <label>消费结算</label>
            </h3>
        </div>
        <div class="panel-content">
            <div class="row">
                <div class="col-md-1">
                    <label>用户名：</label>
                </div>
                <div class="col-md-6">
                    <input id="parentCustomer" type="text" class="form-control" maxlength="10" placeholder="输入会员手机号快速检索" />
                    <input type="hidden" id="parentID" name="parentID" />
                </div>
            </div>
            <div class="row margin-t10">
                <div class="col-md-1">
                    <label>姓名：</label>
                </div>
                <div class="col-md-6">
                    <input type="text" class="form-control" readonly />
                </div>
            </div>
            <div class="row margin-t10">
                <div class="col-md-1">
                    <label>余额：</label>
                </div>
                <div class="col-md-6">
                    <input type="text" class="form-control" readonly style="color:red" />
                </div>
            </div>
            <div class="row margin-t10">
                <div class="col-md-1">
                    <label>明细：</label>
                </div>
                <div class="col-md-6">
                    <textarea rows="4" style="resize:none" class="form-control"></textarea>
                </div>
            </div>
            <div class="row margin-t10">
                <div class="col-md-offset-1 col-md-6">
                    <button type="button" class="btn btn-success">结算</button>
                </div>
            </div>
        </div>
    </div>
</div>
