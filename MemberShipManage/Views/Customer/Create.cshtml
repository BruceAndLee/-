
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="customer" class="margin-t10">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">
                <label>新增会员</label>
            </h3>
        </div>
        <div class="panel-content">
            <div class="row">
                <div class="form-group" style="height:30px">
                    <div class="col-md-2"><span class="text-danger">*</span>用户名：</div>
                    <div class="col-md-6">
                        <input id="userName" name="userNo" type="text" class="form-control" maxlength="15" />
                    </div>
                </div>
                <div class="form-group" style="height:30px">
                    <div class="col-md-2"><span class="text-danger">*</span>密码：</div>
                    <div class="col-md-6">
                        <input id="userPwd" name="passWord" type="password" class="form-control" maxlength="10" />
                    </div>
                </div>
                <div class="form-group" style="height:30px">
                    <div class="col-md-2"><span class="text-danger">*</span>确认密码：</div>
                    <div class="col-md-6">
                        <input id="userRePwd" name="userRePwd" type="password" class="form-control" maxlength="10" />
                    </div>
                </div>
                <div class="form-group" style="height:30px">
                    <div class="col-md-2"><span class="text-danger">*</span>性别：</div>
                    <div class="col-md-6">
                        <select id="userSex" name="sex" class="form-control">
                            <option value="">---请选择---</option>
                            <option value="1">男</option>
                            <option value="0">女</option>
                        </select>
                    </div>
                </div>
                <div class="form-group" style="height:30px">
                    <div class="col-md-2"></div>
                    <div class="col-md-6">
                        <button type="button" class="btn btn-primary">保存</button>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>
<link rel="stylesheet" href="~/Content/Bootstrap/validator/css/bootstrapValidator.min.css" />
<script type="text/javascript" src="~/Content/Bootstrap/validator/js/bootstrapValidator.min.js"></script>
