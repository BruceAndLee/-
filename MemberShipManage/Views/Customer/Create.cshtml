
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form id="customerform" action="@Url.Action("Create","Customer")" method="post">
    <div id="customer" class="margin-t10">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <label>新增会员</label>
                </h3>
            </div>
            <div class="panel-content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group" style="height:35px">
                            <label class="col-md-2"><span class="text-danger">*</span>用户名：</label>
                            <div class="col-md-10">
                                <input id="userNo" name="userNo" type="text" class="form-control" maxlength="15" autocomplete="off" placeholder="输入手机号"/>
                            </div>
                        </div>
                        <div class="form-group" style="height:35px">
                            <label class="col-md-2"><span class="text-danger">*</span>密码：</label>
                            <div class="col-md-10">
                                <input id="userPwd" name="passWord" type="password" class="form-control" maxlength="10" />
                            </div>
                        </div>
                        <div class="form-group" style="height:35px">
                            <label class="col-md-2"><span class="text-danger">*</span>确认密码：</label>
                            <div class="col-md-10">
                                <input id="userRePwd" name="userRePwd" type="password" class="form-control" maxlength="10" />
                            </div>
                        </div>
                        <div class="form-group" style="height:35px">
                            <label class="col-md-2"><span class="text-danger">*</span>姓名：</label>
                            <div class="col-md-10">
                                <input id="name" name="name" type="text" class="form-control" maxlength="10" autocomplete="off"/>
                            </div>
                        </div>
                        <div class="form-group" style="height:35px">
                            <label class="col-md-2"><span class="text-danger">*</span>性别：</label>
                            <div class="col-md-10">
                                <select id="userSex" name="sex" class="form-control">
                                    <option value="">---请选择---</option>
                                    <option value="1">男</option>
                                    <option value="0">女</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group" style="height:35px">
                            <label class="col-md-2">推荐人：</label>
                            <div class="col-md-10">
                                <input id="parentCustomer" type="text" class="form-control" maxlength="10" autocomplete="off" placeholder="请输入手机号或者姓名查找"/>
                                <input type="hidden" id="parentID" name="parentID" />
                            </div>
                        </div>
                        <div class="form-group" style="height:35px">
                            <label class="col-md-2"></label>
                            <div class="col-md-10">
                                <button type="submit" class="btn btn-primary">保存</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
<link rel="stylesheet" href="~/Content/Bootstrap/validator/css/bootstrapValidator.min.css" />
<link rel="stylesheet" href="~/Content/Scripts/autocomplete/jquery-ui.min.css" />
<script type="text/javascript" src="~/Content/Bootstrap/validator/js/bootstrapValidator.min.js"></script>
<script type="text/javascript" src="~/Content/Scripts/autocomplete/jquery-ui.min.js"></script>
<script type="text/javascript" src="~/Content/Scripts/page/customer.create.js"></script>