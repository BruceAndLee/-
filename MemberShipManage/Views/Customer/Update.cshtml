<form id="customerupdate" action="@Url.Action("Update","Customer")" method="put">
    <div class="modal fade" id="updateModal" tabindex="-1" role="dialog" data-keyboard="false" data-backdrop="static" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" style="width:450px;">
            <div class="modal-content" style="width:450px">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title" id="myModalLabel">
                        <img src="~/Content/images/account.png" style="width:30px" />&nbsp;会员信息修改
                    </h4>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="hfd_UpdateCustomerID" name="id"/>
                    <div class="row">
                        <div class="form-group" style="height:35px">
                            <div class="col-md-3"><span class="text-danger">*</span>用户名：</div>
                            <div class="col-md-9">
                                <input id="userNo" name="userNo" type="text" class="form-control" maxlength="15" />
                            </div>
                        </div>
                        <div class="form-group" style="height:35px">
                            <div class="col-md-3"><span class="text-danger">*</span>姓名：</div>
                            <div class="col-md-9">
                                <input id="userName" name="name" type="text" class="form-control" maxlength="10" />
                            </div>
                        </div>
                        <div class="form-group" style="height:35px">
                            <div class="col-md-3"><span class="text-danger">*</span>性别：</div>
                            <div class="col-md-9">
                                <select id="userSex" name="sex" class="form-control">
                                    <option value="">---请选择---</option>
                                    <option value="1">男</option>
                                    <option value="0">女</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    @*<button type="button" class="btn btn-default" data-dismiss="modal">
                            关闭
                        </button>*@
                    <button type="submit" class="btn btn-primary">
                        保存
                    </button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal -->
    </div>
</form>