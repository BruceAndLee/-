@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model MemberShipManage.Domain.Entity.DailyReportEntity
<div id="statistics" class="margin-t10">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">
                <label>每日汇总</label>
            </h3>
        </div>
        <div class="panel-content padding-5">
            <table class="table table-striped table-bordered table-condensed">
                <thead>
                    <tr>
                        <th class="t-head" colspan="3">今日消费汇总</th>
                    </tr>
                </thead>
                <tr style="background-color:#eee;height:35px;">
                    <th>总消费额</th>
                    <th>折扣金额</th>
                    <th>返利金额</th>
                </tr>
                <tr>
                    <td><span class="row-cell" style="color:red">@Model.TotalSales</span></td>
                    <td><span class="row-cell" style="color:blue">@Model.TotalDiscount.ToString("F2")</span></td>
                    <td><span class="row-cell" style="color:darkgreen">@Model.TotalRebate</span></td>
                </tr>
            </table>
            <div class="row">
                <div class="col-md-6">
                    <table class="table table-striped table-bordered table-condensed">
                        <thead>
                            <tr>
                                <th class="t-head" colspan="3">今日消费明细</th>
                            </tr>
                        </thead>
                        <tr style="background-color:#eee;height:35px;">
                            <th>消费者</th>
                            <th>消费金额</th>
                            <th>消费时间</th>
                        </tr>
                        @if (Model.SalesList != null && Model.SalesList.Count > 0)
                        {
                            for (int i = 0; i < Model.SalesList.Count; i++)
                            {
                                <tr>
                                    <td><span class="row-cell-2" style="color:blue">@Model.SalesList[i].UserInfo</span></td>
                                    <td><span class="row-cell-2" style="color:red">@Model.SalesList[i].Amount</span></td>
                                    <td><span class="row-cell-2" style="color:green">@Model.SalesList[i].InDate.GetValueOrDefault(DateTime.MinValue).ToString("yyyy-MM-dd HH:mm")</span></td>
                                </tr>
                            }
                        }
                    </table>
                </div>
                <div class="col-md-6">
                    <table class="table table-striped table-bordered table-condensed">
                        <thead>
                            <tr>
                                <th class="t-head" colspan="3">今日返利明细</th>
                            </tr>
                        </thead>
                        <tr style="background-color:#eee;height:35px;">
                            <th>获利者</th>
                            <th>获利金额</th>
                            <th>获利时间</th>
                        </tr>
                        @if (Model.RebateList != null && Model.RebateList.Count > 0)
                        {
                            for (int i = 0; i < Model.RebateList.Count; i++)
                            {
                                <tr>
                                    <td><span class="row-cell-2" style="color:blue">@Model.RebateList[i].UserInfo</span></td>
                                    <td><span class="row-cell-2" style="color:red">@Model.RebateList[i].Amount</span></td>
                                    <td><span class="row-cell-2" style="color:green">@Model.RebateList[i].InDate.GetValueOrDefault(DateTime.MinValue).ToString("yyyy-MM-dd HH:mm")</span></td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<style type="text/css">
    .row-cell {
        font-weight: bold;
        font-size: 18px;
    }

    .row-cell-2 {
        font-weight: bold;
        font-size: 14px;
    }

    .t-head {
        font-size: 16px;
        font-weight: bold;
        color: yellow;
        background-color:steelblue;
    }
</style>