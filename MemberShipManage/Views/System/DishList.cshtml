@{
    Layout = null;
}

@model MemberShipManage.Models.DishesListModel
@using Webdiyer.WebControls.Mvc;
<table id="dishlist" class="table table-striped table-bordered table-condensed">
    <tr style="background-color:#eee;height:35px;">
        <th>菜品名称</th>
        <th>类别</th>
        <th>录入日期</th>
        <th>操作</th>
    </tr>
    @if (Model != null && Model.DishesList != null && Model.DishesList.Count() > 0)
    {
        foreach (var dishes in Model.DishesList)
        {
            <tr>
                <td>@(dishes.Name)</td>
                <td>@(dishes.Category != null ? dishes.Category.Name : string.Empty)</td>
                <td style="width:150px">
                    @dishes.InDate.GetValueOrDefault(DateTime.Now).ToString("yyyy-MM-dd HH:mm")
                </td>
                <td style="width:150px">
                    <button type="button" class="btn btn-primary" onclick="showDishModal(@dishes.ID,'@dishes.CategoryID','@dishes.Name')">编辑</button>&nbsp;
                    <button type="button" class="btn btn-danger" onclick="deleteDish(@dishes.ID)">删除</button>
                </td>
            </tr>
        }
    }
</table>
@if (Model.DishesList != null && Model.DishesList.Count > 0)
{
    <div class="card bg-info text-white" style="height:30px;line-height:30px">
        <div class="card-body">
            共有 <span style="color: blue" id="ft">@Model.DishesList.TotalItemCount</span> 条记录 当前是第 <span style="color: blue">@(Model.DishesList.CurrentPageIndex)</span>
            页 共 <span style="color: blue">@Model.DishesList.TotalPageCount</span> 页&nbsp;&nbsp;&nbsp;&nbsp;
            @if (Model.DishesList.CurrentPageIndex > 1)
            {
                @Ajax.ActionLink("首页", "DishList",
                          new {
                                PageIndex=0,
                                PageSize= Model.DishesList.PageSize,
                                Model.Name,
                                Model.CategoryID
                          },
                          new AjaxOptions() { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "disheslist" }, new { style = "color:blue" })
                @Ajax.ActionLink("上一页", "DishList",
                          new
                          {
                              PageIndex = Model.DishesList.CurrentPageIndex-1,
                              PageSize = Model.DishesList.PageSize,
                              Model.Name,
                              Model.CategoryID
                          },
                          new AjaxOptions() { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "disheslist" }, new { style = "margin-left:5px;color:blue" })
            }
            else
            {
                <text>首页&nbsp;</text>
                <text>上一页&nbsp;</text>
            }
            @if (Model.DishesList.CurrentPageIndex < Model.DishesList.TotalPageCount)
            {
                @Ajax.ActionLink("下一页", "DishList",
                          new
                          {
                              PageIndex = Model.DishesList.CurrentPageIndex + 1,
                              PageSize = Model.DishesList.PageSize,
                              Model.Name,
                              Model.CategoryID
                          },
                          new AjaxOptions() { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "disheslist" }, new { style = "margin-left:5px;color:blue" })
                @Ajax.ActionLink("末页", "DishList",
                           new
                           {
                               PageIndex = Model.DishesList.TotalPageCount,
                               PageSize = Model.DishesList.PageSize,
                               Model.Name,
                               Model.CategoryID
                           },
                          new AjaxOptions() { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "disheslist" }, new { style = "margin-left:5px;color:blue" })
            }
            else
            {
                <text>下一页&nbsp;</text>
                <text>末页&nbsp;</text>
            }
        </div>
    </div>
}
else
{
    <p class="text-center text-danger">没有符合条件的记录</p>
}
