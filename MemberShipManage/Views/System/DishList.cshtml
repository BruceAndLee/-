@{
    Layout = null;
}

@model MemberShipManage.Models.DishesListModel
@using Webdiyer.WebControls.Mvc;
<table id="dishlist" class="table table-striped table-bordered table-condensed">
    <tr style="background-color:#eee;height:35px;">
        <th>菜品名称</th>
        <th>录入日期</th>
        <th>操作</th>
    </tr>
    @if (Model != null && Model.DishesList != null && Model.DishesList.Count() > 0)
    {
        foreach (var dishes in Model.DishesList)
        {
            <tr>
                <td>@(dishes.Name)</td>
                <td style="width:150px">
                    @dishes.InDate.GetValueOrDefault(DateTime.Now).ToString("yyyy-MM-dd HH:mm")
                </td>
                <td style="width:80px">
                    <button type="button" class="btn btn-warning" onclick="showDishModal(@dishes.ID,'@dishes.Name')">编辑</button>
                    <button type="button" class="btn btn-warning">删除</button>
                </td>
            </tr>
        }
    }
</table>
@Ajax.Pager(Model.DishesList, new PagerOptions
{
    PageIndexParameterName = "pageIndex",
    ContainerTagName = "ul",
    PrevPageText = "上页",
    NextPageText = "下页",
    FirstPageText = "首页",
    LastPageText = "尾页",
    CssClass = "pagination",
    CurrentPagerItemTemplate = "<li class=\"active\"><a href=\"#\">{0}</a></li>",
    DisabledPagerItemTemplate = "<li class=\"disabled\"><a>{0}</a></li>",
    PagerItemTemplate = "<li>{0}</li>"
}, new MvcAjaxOptions { UpdateTargetId = "consumelist" })
