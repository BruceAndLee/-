<form id="dishupdate" action="@Url.Action("UpdateDish","System")" method="put" autocomplete="off">
    <div class="modal fade" id="dishUpdateModal" tabindex="-1" role="dialog" data-keyboard="false" data-backdrop="static" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" style="width:450px;">
            <div class="modal-content" style="width:450px">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title" id="myModalLabel">
                        <img src="~/Content/images/account.png" style="width:30px" />&nbsp;菜品修改
                    </h4>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" id="hfdID" />
                    <div class="row">
                        <div class="form-group" style="height:35px">
                            <div class="col-md-3"><span class="text-danger">*</span>菜品名称：</div>
                            <div class="col-md-9">
                                <input id="name" name="name" type="text" class="form-control" maxlength="25" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    @*<button type="button" class="btn btn-default" data-dismiss="modal">
                            关闭
                        </button>*@
                    <button type="submit" class="btn btn-primary">
                        保存
                    </button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal -->
    </div>
</form>