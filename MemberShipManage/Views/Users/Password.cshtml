@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form id="updatePwdform" action="@Url.Action("UpdatePassword","Users")" method="put">
    <div id="modifyPwd" class="margin-t10">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <label>修改密码</label>
                </h3>
            </div>
            <div class="panel-content padding-5">

                <div class="col-md-6">
                    <div class="form-group">
                        <label>原密码：</label>
                        <input type="password" id="orgPassword" name="orgPassword" class="form-control" maxlength="50" />
                    </div>
                    <div class="form-group margin-t5">
                        <label>新密码：</label>
                        <input type="password" id="newPassword" name="newPassword" class="form-control" maxlength="50" />
                    </div>
                    <div class="form-group margin-t5">
                        <label>重复密码：</label>
                        <input type="password" name="rePassword" class="form-control" maxlength="50" />
                    </div>
                    <div class="margin-t10">
                        <input type="submit" class="btn btn-primary" value="保存" />
                        <input type="reset" class="btn btn-default" value="取消" />
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
<link rel="stylesheet" href="~/Content/Bootstrap/validator/css/bootstrapValidator.min.css" />
<script type="text/javascript" src="~/Content/Bootstrap/validator/js/bootstrapValidator.min.js"></script>
<script type="text/javascript" src="~/Content/Scripts/page/user.password.js"></script>

